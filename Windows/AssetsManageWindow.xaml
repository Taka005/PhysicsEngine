<Window x:Class="PhysicsEngine.Windows.AssetsManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysicsEngine.Windows"
        mc:Ignorable="d"
        Title="アセットの管理" Height="500" Width="500" ResizeMode="NoResize">
    <Grid>
        <StackPanel Height="450" Width="400">
            <StackPanel Height="400" Width="400">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ImageListPanel">
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Margin="0,10,0,10">
                <Button x:Name="AddButton" Content="追加" Background="#FF00AA00" Foreground="White" BorderBrush="{x:Null}" Height="32" Width="56" Margin="10,0,3,0" Click="Add_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
