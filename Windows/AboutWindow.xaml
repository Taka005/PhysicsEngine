<Window x:Class="PhysicsEngine.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysicsEngine"
        mc:Ignorable="d"
        Title="このアプリについて" Height="200" Width="240" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Height="100" HorizontalAlignment="Center">
                <TextBlock Text="アプリ名: PhysicsEngine" FontSize="16" FontWeight="Bold" />
                <TextBlock x:Name="VersionTextBlock" Margin="0,10,0,0" />
                <TextBlock Text="開発者: Taka" />
                <TextBlock Text="お問い合わせ: contact@takadev.jp" />
            </StackPanel>
            <StackPanel Height="60" Width="215" HorizontalAlignment="Center">
                <Button Content="閉じる" Height="32" Width="56" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
