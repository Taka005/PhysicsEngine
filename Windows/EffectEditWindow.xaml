<Window x:Class="PhysicsEngine.EffectEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PhysicsEngine.Utils"
        mc:Ignorable="d"
        Title="エフェクトの編集" Height="350" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Height="36" Width="150" Orientation="Horizontal">
                <Label Content="エフェクトID" HorizontalAlignment="Center" Height="25"/>
                <local:EditableTextBlock x:Name="EffectId" Width="96" Height="20" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="168" Width="264">
                <StackPanel Height="168" Width="60">
                    <Label Content="始点X" Height="28" Width="60"/>
                    <Label Content="始点Y" Height="28" Width="60"/>
                    <Label Content="終点X" Height="28" Width="60"/>
                    <Label Content="終点Y" Height="28" Width="60"/>
                    <Label Content="X速度" Height="28" Width="60"/>
                    <Label Content="Y速度" Height="28" Width="60"/>
                </StackPanel>
                <StackPanel Height="168" Width="35">
                    <local:EditableTextBlock Text="{Binding Value, ElementName=StartXSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,7,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:EditableTextBlock Text="{Binding Value, ElementName=StartYSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:EditableTextBlock Text="{Binding Value, ElementName=EndXSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,7,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:EditableTextBlock Text="{Binding Value, ElementName=EndYSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:EditableTextBlock Text="{Binding Value, ElementName=VelXSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <local:EditableTextBlock Text="{Binding Value, ElementName=VelYSlider, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Height="168" Width="170">
                    <Slider x:Name="StartXSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Slider x:Name="StartYSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Slider x:Name="EndXSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Slider x:Name="EndYSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Slider x:Name="VelXSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Slider x:Name="VelYSlider" Height="18" Width="150" Minimum="-1000" Maximum="1000" Value="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Height="60" Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="色" Height="28" Width="47"/>
                    <xctk:ColorPicker x:Name="EffectColor" Width="156" Height="28" ShowStandardColors="False" ColorMode="ColorCanvas" ShowTabHeaders="False" SelectedColor="Red" AdvancedTabHeader="ユーザー設定" StandardTabHeader="標準" AvailableColorsHeader="使用可能な色" ShowRecentColors="False" RecentColorsHeader="最近使った色" StandardColorsHeader="標準色" SelectedColorChanged="ColorPicker_Change"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="画像" Height="28" Width="35"/>
                    <ComboBox x:Name="ImageSelect" Width="170" Height="22" VerticalAlignment="Center" SelectedIndex="0" SelectionChanged="Image_Change">
                        <ComboBoxItem Content="なし"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Height="60" Width="215" HorizontalAlignment="Center">
                <Button Content="更新" Click="UpdateButton_Click" Height="32" Width="56" Background="#FF027AFF" Foreground="White" BorderBrush="{x:Null}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
