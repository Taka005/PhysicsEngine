<Window x:Class="PhysicsEngine.Windows.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysicsEngine.Windows"
        mc:Ignorable="d"
        Title="コマンドの実行" Height="350" Width="530" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="ResultScrollViewer" Height="250" Width="490" Grid.Row="0" Margin="0,0,0,10" VerticalScrollBarVisibility="Auto">
            <RichTextBox x:Name="ResultTextBlock" Focusable="False" IsReadOnly="True" Background="Transparent" BorderBrush="Transparent" FontFamily="Consolas" FontSize="14" Grid.Row="0" Margin="0,0,0,10">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="5"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBox x:Name="CommandTextBox" Width="400" Height="30" VerticalContentAlignment="Center" KeyDown="CommandTextBox_KeyDown"/>
            <Button Content="実行" Width="80" Margin="10,0,0,0" Click="ExecuteButton_Click" Background="#FF8C8C8C" Foreground="White" BorderBrush="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
