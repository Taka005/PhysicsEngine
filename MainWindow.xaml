<Window x:Class="PhysicsEngineGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PhysicsEngineGUI.Utils"
        mc:Ignorable="d"
        Title="PhysicsEngine" Height="800" Width="1000" ResizeMode="NoResize" Closing="Window_Closing">
    <DockPanel>
        <Menu x:Name="メニューバー" DockPanel.Dock="Top" Background="#FFF3F3F3" BorderThickness="0,0,0,1" BorderBrush="#FFE8E8E8">
            <MenuItem x:Name="ファイルメニュー" Header="ファイル">
                <MenuItem x:Name="新規" Header="新規" Click="NewFile_Click"/>
                <MenuItem x:Name="保存" Header="保存" Click="SaveFile_Click"/>
                <MenuItem x:Name="開く" Header="開く" Click="OpenFile_Click"/>
                <Separator/>
                <MenuItem x:Name="終了" Header="終了" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem x:Name="設定" Header="設定"/>
            <MenuItem x:Name="ヘルプメニュー" Header="ヘルプ">
                <MenuItem x:Name="更新プログラムを確認" Header="更新プログラムを確認"/>
                <Separator/>
                <MenuItem x:Name="ソースとバイナリ" Header="ソースとバイナリ"/>
                <Separator/>
                <MenuItem x:Name="ABOUT" Header="ABOUT"/>
            </MenuItem>
        </Menu>
        <Grid Background="White">
            <Canvas x:Name="MyCanvas" Background="#FFF7F7F7" Margin="0,0,316,0" ClipToBounds="True"/>
            <GroupBox Header="設定" Margin="689,10,20,0" VerticalAlignment="Top" Height="137">
                <StackPanel Orientation="Horizontal" Height="120">
                    <StackPanel Width="60">
                        <Label Content="重力" Height="28" Width="60"/>
                        <Label Content="摩擦" Height="28" Width="60"/>
                        <Label Content="再生速度" Height="28" Width="60"/>
                        <Label Content="拡大縮小" Height="28" Width="60"/>
                    </StackPanel>
                    <StackPanel Width="35">
                        <local:EditableTextBlock Text="{Binding Value, ElementName=重力, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,7,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <local:EditableTextBlock Text="{Binding Value, ElementName=摩擦, StringFormat=\{0:F2\}}" Width="35" Height="17" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <local:EditableTextBlock Text="{Binding Value, ElementName=再生速度, StringFormat=\{0:F1\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <local:EditableTextBlock Text="{Binding Value, ElementName=拡大縮小, StringFormat=\{0:F1\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Height="120" Width="181">
                        <Slider x:Name="重力" Height="18" Width="150" Minimum="0" Maximum="1000" Value="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                        <Slider x:Name="摩擦" Height="18" Width="150" Minimum="-1" Maximum="1" Value="0.01" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                        <Slider x:Name="再生速度" Height="18" Width="150" Minimum="0.1" Maximum="10" Value="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                        <Slider x:Name="拡大縮小" Height="18" Width="150" Minimum="0.1" Maximum="10" Value="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="生成" Margin="689,152,20,0" VerticalAlignment="Top" Height="246">
                <StackPanel Margin="0,0,-2,0" Height="226">
                    <StackPanel Height="42" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="種類" Height="27" Width="37"/>
                        <ComboBox x:Name="種類" Width="170" Height="22" VerticalAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="円"/>
                            <ComboBoxItem Content="四角"/>
                            <ComboBoxItem Content="三角"/>
                            <ComboBoxItem Content="ロープ"/>
                            <ComboBoxItem Content="直線"/>
                            <ComboBoxItem Content="曲線"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Height="145" Orientation="Horizontal" Width="283">
                        <StackPanel Height="141" Width="55">
                            <Label Content="大きさ" Height="28" Width="55"/>
                            <Label Content="質量" Height="28" Width="55"/>
                            <Label Content="剛性" Height="28" Width="55"/>
                            <Label Content="初速度X" Height="28" Width="55"/>
                            <Label Content="初速度Y" Height="28" Width="55"/>
                        </StackPanel>
                        <StackPanel Width="35">
                            <local:EditableTextBlock Text="{Binding Value, ElementName=大きさ, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,7,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <local:EditableTextBlock Text="{Binding Value, ElementName=質量, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <local:EditableTextBlock Text="{Binding Value, ElementName=剛性, StringFormat=\{0:F1\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <local:EditableTextBlock Text="{Binding Value, ElementName=初速度X, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <local:EditableTextBlock Text="{Binding Value, ElementName=初速度Y, StringFormat=\{0:F0\}}" Width="35" Height="17" Margin="0,11,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Height="143" Width="190">
                            <Slider x:Name="大きさ" Minimum="0" Maximum="1000" Value="10" Height="18" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5"/>
                            <Slider x:Name="質量" Minimum="0" Maximum="1000" Value="10" Height="18" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <Slider x:Name="剛性" Minimum="0.1" Maximum="1" Value="0.8" Height="18" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                            <Slider x:Name="初速度X" Minimum="-1000" Maximum="1000" Value="0" Height="18" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,5" />
                            <Slider x:Name="初速度Y" Minimum="-1000" Maximum="1000" Value="0" Height="18" Width="150" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Height="37" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Content="物体の色" Height="28" Width="55"/>
                        <xctk:ColorPicker x:Name="物体の色" Width="156" Height="28" ShowStandardColors="False" ColorMode="ColorCanvas" ShowTabHeaders="False" SelectedColor="Red" AdvancedTabHeader="ユーザー設定" StandardTabHeader="標準" AvailableColorsHeader="使用可能な色" ShowRecentColors="False" RecentColorsHeader="最近使った色" StandardColorsHeader="標準色"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <StackPanel Margin="766,584,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="開始" Content="開始" Background="#FF00AA00" Foreground="White" BorderBrush="{x:Null}" Height="32" Width="56" Margin="10,0,3,0"/>
                <Button x:Name="停止" Content="停止" Background="Red" Foreground="White" BorderBrush="{x:Null}" Height="32" Width="56" Margin="3,0,10,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
